@model Bloggie.Web.Models.ViewModels.ResetPasswordViewModel
@{
}


<div class="conteiner mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h-3">
                Reset Password
            </h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Username" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Old Password</label>
                    <input type="password" id="oldpassword" class="form-control" asp-for="oldPassword"/>
                    <span class="text-danger" asp-validation-for="oldPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">New password</label>
                    <input type="password" id="oldpassword" class="form-control" asp-for="newPassword" required minlength="6" />
                    <span class="text-danger" asp-validation-for="newPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm new password</label>
                    <input type="password" id="oldpassword" class="form-control" asp-for="confirmNewPassword" />
                    <span class="text-danger" asp-validation-for="confirmNewPassword"></span>
                </div>

                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <a type="button" class="btn btn-light ms-2"
                            asp-area=""
                            asp-controller="Account"
                            asp-action="Cancel">
                      Cancel
                    </a>
                </div>


            </form>
            
        </div>
    </div>
</div>