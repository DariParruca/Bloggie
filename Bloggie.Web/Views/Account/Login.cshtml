@model Bloggie.Web.Models.ViewModels.LoginViewModel

@{
}

@if (TempData["ErrorMessage"] != null)
{
    <div id="successAlert" class="alert alert-danger text-center" role="alert">
        <div class="row align-items-center">
            <div class="col">@TempData["ErrorMessage"]</div>
            <div class="col-auto">
                <button type="button" class="btn-close" aria-label="Close" onclick="closeAlert()"></button>
            </div>
        </div>
    </div>
}

<div class="conteiner mx-auto">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-6">

            <h1 class="mt-3 mb-3 h-3">
                Login
            </h1>

            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Username</label>
                    <input type="text" id="username" class="form-control" asp-for="Username" required/>
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" id="password" class="form-control" asp-for="Password" required minlength="6"/>
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>

@*                 <div class="mb-3 text-left">
                    <a href="/Account/ForgotPassword" class="forgot-password-link">Forgott Password?</a>
                </div> *@

                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-dark">Login</button>
                </div>

                <p class="text-center">Or</p>

                <div class="mb-3 text-center">
                    <a asp-controller="Account" asp-action="GoogleLogin" class="btn btn-light">
                        <img src="https://www.freepnglogos.com/uploads/google-logo-png/google-logo-png-suite-everything-you-need-know-about-google-newest-0.png" alt="Google Logo" style="vertical-align: middle; width: 24px; height: 24px;">
                        Login with Google
                    </a>
                </div>

                <div class="mb-3 text-center">
                    <a asp-controller="Account" asp-action="FacebookLogin" class="btn btn-light">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/51/Facebook_f_logo_%282019%29.svg/1200px-Facebook_f_logo_%282019%29.svg.png" alt="Facebook Logo" style="vertical-align: middle; width: 24px; height: 24px;">
                        Login with Facebook
                    </a>
                </div>
                <input type="hidden" asp-for="ReturnUrl" />
            </form>

        </div>
    </div>
</div>

<script>
    function closeAlert() {
        document.getElementById("successAlert").style.display = "none";
    }

    // Hide the success alert after 3 seconds
    window.setTimeout(function () {
        document.getElementById("successAlert").style.display = "none";
    }, 3000);
</script>
